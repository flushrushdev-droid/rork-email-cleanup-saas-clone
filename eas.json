{
  "cli": {
    "version": ">= 5.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "node": "20.x.x",
      "env": {
        "NPM_CONFIG_LEGACY_PEER_DEPS": "1"
      },
      "android": {
        "gradleCommand": ":app:assembleDebug"
      },
      "ios": {
        "simulator": true
      }
    },
    "preview": {
      "distribution": "internal",
      "node": "20.x.x",
      "env": {
        "NPM_CONFIG_LEGACY_PEER_DEPS": "1"
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "node": "20.x.x",
      "env": {
        "NPM_CONFIG_LEGACY_PEER_DEPS": "1"
      },
      "android": {
        "buildType": "apk"
      }
    }
  },
  "submit": {
    "production": {}
  }
}

